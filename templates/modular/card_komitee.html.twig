<div class="bg-base-100 shadow-xl w-full rounded-lg">

	<figure style="float:left;">
		{% set image = page.media.images|first %}
		{% if image %}
			{{ image.cropResize(200,1024).html('',page.header.title,'h-full')|raw }}
		{% endif %}
	</figure>

	<div class="card-body p-0">
		<div class="p-4">
			<h2 class="card-title">{{ page.header.title|raw }}</h2>
			<p class="">{{ content|raw }}</p>
		</div>
	</div>
</div>
